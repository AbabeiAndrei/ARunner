@using ARunner.Settings
@{
    ViewBag.Title = Settings.APPLICATION_NAME;
    Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/libs/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="~/css/account/style.css" />

<div class="container" ng-controller="setPasswordController">
    <div class="row">
        <div class="col-md-6 col-lg-offset-3">
            <form class="form-signin">
                <h2 class="form-signin-heading">Please input your password</h2>
                <p class="input-group">
                    <label>Password</label>
                    <input type="password" class="form-control" ng-model="setPassModel.password" required />
                </p>
                <p class="input-group">
                    <label>Password again</label>
                    <input type="password" class="form-control" ng-model="setPassModel.password2" required />
                </p>
                
                <div ng-show="errors">{{errors}}</div>

                <button class="btn btn-lg btn-primary btn-block" type="button" ng-click="setPass()">Set</button>
            </form>
        </div>
    </div>
</div>