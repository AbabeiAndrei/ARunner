@model ARunner.BusinessLogic.Models.RegisterViewModel
@using ARunner.Settings
@{
    ViewBag.Title = Settings.APPLICATION_NAME;
}

<link rel="stylesheet" type="text/css" href="~/libs/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="~/css/account/style.css" />

<div class="container" ng-controller="registerController">
    <div class="row">
        <div class="col-md-6 col-lg-offset-3">
            <form class="form-signin">
                <h2 class="form-signin-heading">Welcome</h2>
                <p class="input-group">
                    <label>Name</label>
                    <input type="text" class="form-control" ng-model="registerModel.fullName" style="width: 283px" required />
                </p>
                <p class="input-group">
                    <label>Email</label>
                    <input type="email" class="form-control" ng-model="registerModel.email" style="width: 283px" required />
                </p>
                
                <label class="form-control" ng-show="errors">{{errors}}</label>

                <button class="btn btn-lg btn-primary btn-block" type="button" ng-click="register()">Register</button>
            </form>
        </div>
    </div>
</div>